.PHONY: imgs-all
imgs-all:						\
	$(IMGDIR)/fill mk_img mk_depth mk_many_img	\
	$(IMGDIR)/vmdk.img				\
	$(IMGDIR)/ext2-small.img			\
	$(IMGDIR)/reiserfs-many-blockfile.img		\
	$(IMGDIR)/vfat-32-many.img			\
	$(IMGDIR)/vfat-manymore.img			\
	$(IMGDIR)/vfat-many-4097.img			\
	$(IMGDIR)/btrfs-empty.img			\
