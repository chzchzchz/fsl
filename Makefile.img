	tar jxvf $(LINUXTAR)  -C isolinuxtmp/3
	tar jxvf  $(LINUXTAR) -C isolinuxtmp/4
	mkisofs -o iso9660-linux-4gb.img ./isolinuxtmp
	rm -rf isolinuxtmp

